{% extends 'base.html.twig' %}

{% block title %}Hello Blogs Reader!
{% endblock %}

{% block body %}


	<div class="row justify-content-md-center mt-4 cardHeight ">
		{% for article in articles %}
			<div class="col-3  mb-4">
				<div class="card mb-4 cardHeight">
					<h4 class="card-header text-center">{{article.title}}
					</h4>
					<div class="card-body">
						<div class="card-body text-center">
							<h6 class="text-center">written by
								{{article.user.firstName}}
							</h6>
							{# <h6 class="card-subtitle text-muted ">from the</h6> #}
							<p class="card-subtitle text-muted ">Created on
								{{article.createdAt | date('d/m/Y' ) }}
							</p>
						</div>
						<img src="/assets/images/{{article.image}}" alt="" class=" articleImage text-center mt-2">
						<div class="card-body text-center ">
							<a href="{{path('article', {'id': article.id})}}" class="card-link btn btn-secondary">Read</a>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
