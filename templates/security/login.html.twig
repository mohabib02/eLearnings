{% extends 'base.html.twig' %}


{% block title %}Log in!
{% endblock %}

{% block body %}

	<h3 class="text-center mt-3">Please sign in</h3><hr><hr>

	<div class="row justify-content-md-center">
		<form method="post" class="col-md-6 mt-3 ">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3 ">
					You are logged in as
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" required autofocus>
			<label for="inputPassword">Password</label>
			<input type="password" name="password" id="inputPassword" class="form-control mb-3" required>
			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.See https://symfony.com/doc/current/security/remember_me.html #}

			<div class="checkbox mb-3">
				<label>
					<input type="checkbox" name="_remember_me" class='mt-3'>
					Remember me
				</label>
			</div>
			<button class="btn btn-lg btn-secondary btn-block" type="submit">
				Sign in
			</button>
		</form>
	</div>


{% endblock %}
